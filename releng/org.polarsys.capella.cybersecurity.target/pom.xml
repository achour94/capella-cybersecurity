<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.polarsys.capella.releng</groupId>
	<artifactId>capella.target-definition</artifactId>
	<version>2.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<tycho-version>2.5.0</tycho-version>
		<tycho-extras-version>2.5.0</tycho-extras-version>
		<targetPlatform.name>capella.target-definition.targetplatform</targetPlatform.name>
		<targetPlatform.repository>https://artifactory.thalesdigital.io/artifactory/generic-internal/capella-invaders/libs/org.eclipse.cbi.targetplatform-3.5.8.202110281158.zip!/</targetPlatform.repository>
		<converterApplication.name>org.eclipse.cbi.targetplatform.tpd.converter</converterApplication.name>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-eclipserun-plugin</artifactId>
				<version>${tycho-extras-version}</version>
				<configuration>
					<repositories>
						<repository>
							<id>url1</id>
							<layout>p2</layout>
							<url>https://download.eclipse.org/releases/2021-06/202106161001/</url>
						</repository>
						<repository>
							<id>artifactory-targetPlatform</id>
							<layout>p2</layout>
							<url>${targetPlatform.repository}</url>
						</repository>
					</repositories>
					<dependencies>
						<dependency>
							<artifactId>org.eclipse.cbi.targetplatform-feature</artifactId>
							<type>eclipse-feature</type>
						</dependency>
						<dependency>
							<artifactId>org.eclipse.equinox.p2.sdk</artifactId>
							<type>eclipse-feature</type>
						</dependency>
					</dependencies>
					<executionEnvironment>JavaSE-11</executionEnvironment>
				</configuration>
				<executions>
					<execution>
						<id>generate.target</id>
						<phase>validate</phase>
						<configuration>
							<applicationsArgs>
								<args>-application ${converterApplication.name} ${targetPlatform.name} -settingsFileLocation ${settingsFileLocation}</args>
							</applicationsArgs>
						</configuration>
						<goals>
							<goal>eclipse-run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
